<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFEAFC"
    tools:context=".authentication.LoginActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edt_register_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Nama"
        app:boxBackgroundColor="@color/white"
        app:boxStrokeColor="@color/black"
        app:startIconDrawable="@drawable/ic_person"
        app:startIconContentDescription="Nama"
        app:layout_constraintBottom_toTopOf="@id/edt_register_nohp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edt_register_nohp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Nomor Hp"
        app:boxBackgroundColor="@color/white"
        app:boxStrokeColor="@color/black"
        app:startIconDrawable="@drawable/ic_call"
        app:startIconContentDescription="Nomor Handphone"
        app:layout_constraintBottom_toTopOf="@id/edt_register_email">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edt_register_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        app:boxBackgroundColor="@color/white"
        app:boxStrokeColor="@color/black"
        app:startIconDrawable="@drawable/ic_email"
        app:startIconContentDescription="Email"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            />
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edt_register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Password"
        app:boxBackgroundColor="@color/white"
        app:boxStrokeColor="@color/black"
        app:startIconDrawable="@drawable/ic_lock"
        app:startIconContentDescription="Password"
        app:layout_constraintTop_toBottomOf="@id/edt_register_email">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Daftar"
        android:textAllCaps="false"
        android:backgroundTint="#B202B6"
        app:layout_constraintTop_toBottomOf="@id/edt_register_password"
        />
</androidx.constraintlayout.widget.ConstraintLayout>